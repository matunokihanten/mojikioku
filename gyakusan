<body>
  <h1>豪華な逆算チャレンジ（ヒント付き）</h1>
  <div id="game-container">
    <div id="level-panel">
      <button id="level-down">レベルダウン</button>
      <span id="current-level">レベル: 2</span>
      <button id="level-up">レベルアップ</button>
    </div>
    <p id="target">目標: ?</p>
    <div id="numbers-container"></div>
    <!-- ヒントボタンとヒント表示エリア -->
    <button id="hint-button">ヒント</button>
    <p id="hint-display"></p>
    <p id="message"></p>
    <div class="control-buttons">
      <button id="new-challenge">新しいチャレンジ</button>
    </div>
  </div>
  
  <script>
    // グローバル変数
    let puzzle = {};
    let currentLevel = 2; // 初期レベル
    const minLevel = 1;
    const maxLevel = 5;

    // レベルに応じたパズル設定を取得
    function getLevelSettings(level) {
      let settings = {};
      switch (level) {
        case 1:
          settings.count = 3;
          settings.maxNumber = 5;
          break;
        case 2:
          settings.count = 5;
          settings.maxNumber = 9;
          break;
        case 3:
          settings.count = 7;
          settings.maxNumber = 9;
          break;
        case 4:
          settings.count = 9;
          settings.maxNumber = 12;
          break;
        case 5:
          settings.count = 11;
          settings.maxNumber = 15;
          break;
        default:
          settings.count = 5;
          settings.maxNumber = 9;
      }
      return settings;
    }
    
    // Fisher-Yates アルゴリズムでシャッフル
    function shuffleArray(array) {
      for (let i = array.length - 1; i > 0; i--) {
        let j = Math.floor(Math.random() * (i + 1));
        [array[i], array[j]] = [array[j], array[i]];
      }
      return array;
    }

    // パズル生成関数
    function generatePuzzle() {
      const { count, maxNumber } = getLevelSettings(currentLevel);
      let numbers = [];
      let initialSum = 0;
      let target = 0;
      // すべてが + の場合、初期合計と目標が同じになってしまうので再生成
      do {
        numbers = [];
        initialSum = 0;
        target = 0;
        for (let i = 0; i < count; i++) {
          // 1～maxNumber の数字を生成
          const num = Math.floor(Math.random() * maxNumber) + 1;
          // ランダムに解答用の符号（+1 or -1）を設定
          const solSign = Math.random() < 0.5 ? 1 : -1;
          numbers.push({
            value: num,
            solutionSign: solSign,  // 内部利用
            currentSign: 1          // 現在の符号は全て+1からスタート
          });
          initialSum += num;
          target += solSign * num;
        }
      } while (target === initialSum || target <= 0);
      
      puzzle.numbers = numbers;
      puzzle.initialSum = initialSum;
      puzzle.target = target;
    }

    // パズル内容を画面に表示する（「現在の合計」表示は行わず、ヒントエリアは空にしています）
    function displayPuzzle() {
      document.getElementById("current-level").innerText = "レベル: " + currentLevel;
      document.getElementById("target").innerText = "目標: " + puzzle.target;
      const container = document.getElementById("numbers-container");
      container.innerHTML = "";
      document.getElementById("message").innerText = "";
      document.getElementById("hint-display").innerText = ""; // ヒント表示エリアのクリア
      puzzle.numbers.forEach((item, index) => {
        const span = document.createElement("span");
        span.innerText = "+" + item.value;
        span.dataset.index = index;
        span.addEventListener("click", function() {
          toggleNumber(index);
        });
        container.appendChild(span);
      });
    }

    // 現在の合計を計算し、正解かチェックする（チェックのみ、合計は画面に出しません）
    function updateCheck() {
      let currentSum = puzzle.numbers.reduce((acc, item) => acc + item.currentSign * item.value, 0);
      const messageElem = document.getElementById("message");
      if (currentSum === puzzle.target) {
        messageElem.innerText = "正解！";
      } else {
        messageElem.innerText = "";
      }
    }

    // 数字の符号を切り替える関数
    function toggleNumber(index) {
      puzzle.numbers[index].currentSign *= -1;
      const span = document.querySelector('span[data-index="' + index + '"]');
      span.innerText = (puzzle.numbers[index].currentSign === 1 ? "+" : "-") + puzzle.numbers[index].value;
      updateCheck();
    }

    // ヒントボタンを押したときに、現在の合計を表示する関数
    function displayHint() {
      let currentSum = puzzle.numbers.reduce((acc, item) => acc + item.currentSign * item.value, 0);
      document.getElementById("hint-display").innerText = "現在の合計: " + currentSum;
    }

    // レベルアップ／レベルダウン処理
    function levelUp() {
      if (currentLevel < maxLevel) {
        currentLevel++;
        generatePuzzle();
        displayPuzzle();
      } else {
        alert("最高レベルに到達しています！");
      }
    }
    function levelDown() {
      if (currentLevel > minLevel) {
        currentLevel--;
        generatePuzzle();
        displayPuzzle();
      } else {
        alert("これ以上レベルを下げられません！");
      }
    }

    // イベントリスナーの設定
    document.getElementById("level-up").addEventListener("click", levelUp);
    document.getElementById("level-down").addEventListener("click", levelDown);
    document.getElementById("new-challenge").addEventListener("click", function() {
      generatePuzzle();
      displayPuzzle();
    });
    document.getElementById("hint-button").addEventListener("click", displayHint);

    // ページ読み込み時に初期パズル生成
    window.onload = function() {
      generatePuzzle();
      displayPuzzle();
    }
  </script>
</body>
</html>